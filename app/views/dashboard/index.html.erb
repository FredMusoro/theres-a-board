<!-- Page container -->
<div class="page-container">
  <!-- Page content -->
  <div class="page-content">
    <!-- Main content -->
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-2">
          <!-- Help Button -->
          <div class="panel panel-flat">
            <div class="panel-body">
                <button onClick="mentorDispatcher.openRequest()" id="help-button" class="btn bg-warning-400 btn-block btn-float btn-float-lg" type="button"><i class="icon-people"></i><span>Get Help</span></button>
            </div>
          </div>
          <!-- /Help Button -->
          <!-- Active Mentors -->
          <div class="panel panel-flat">
            <div class="panel-heading">
              <h6 class="panel-title">Active Mentors</h6>
            </div>
            <div class="panel-body">
              <ul class="media-list" id="active-mentor-list">
              </ul>
            </div>
          </div>
          <!-- /Active Mentors -->
          <!-- Tutor Leaderboard -->
          <div class="panel panel-flat">
            <div class="panel-heading">
              <h6 class="panel-title">Tutor Leaderboard</h6>
            </div>
            <div class="panel-body">
              <ul class="media-list" id="leaderboard">
              <% @leaderboard.each do |leader| %>
              <li class="media">
                <a href="#" class="media-left"><img src="<%= leader.first.image %>" class="img-sm img-circle" alt=""></a>
                <div class="media-body">
                  <p class="media-heading text-semibold"><%= leader.first.name %></p>
                  <small class="display-block no-margin"><%= leader[1] %> sessions</small>
                </div>

              </li>
              <% end %>
              </ul>
            </div>
          </div>
          <!-- /Tutor Leaderboard -->
          <!-- Tutoring Goal -->
          <div class="panel panel-flat">
            <div class="panel-heading">
              <h6 class="panel-title">Tutoring Goal</h6>
            </div>
            <div class="panel-body">
              <ul class="progress-list">
                <li>
                  <label>Goal: <span>10</span></label>
                  <div class="progress progress-xxs">
                    <div class="progress-bar progress-bar-info" style="width: <%= (current_user.completed_count * 10) %>%">
                    </div>
                  </div>
                </li> 
              </ul>
            </div>
          </div>
          <!-- /Tutoring Goal -->

        </div>
        <div class="col-md-10">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h5 class="panel-title">The Board</h5>
              <!--New Button-->
              <div class="heading-elements">
                <div id="filter-select-div" class="btn btn-primary btn-xs dropdown-toggle heading-btn">
                  <select id='calendar-filter' name='search' class="bg-primary">
                    <option value='ALL'>All</option>
                    <option value='AVAILABLE'>Available</option>
                    <option value='MINE'>Mine</option>
                  </select>
                </div>
                <button id="new-timeslot-btn" type="button" class="btn btn-success btn-xs heading-btn" onClick="makeNewTimeslotbutton()">New Availability</button>
              </div>
            </div>
            <!-- FullCalendar View -->
            <div class="panel-body">
              <div id="tutor-cal" class="fullcalendar-basic"></div>
            </div>
            <!-- FullCalendar View -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal used for showing timeslots -->
<div id="modal_remote" class="modal fade">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
    </div>
  </div>
</div>
<!-- /Modal used for showing timeslots -->

<!-- Create timeslot modal -->
<div id="modal_new_timeslot" class="modal fade">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h5 class="modal-title"><h5 class="modal-title"><i class="icon-alarm-add"></i> &nbsp;Add Tutoring Time</h5>
      </div>
      <!-- New Timeslot FORM -->
      <form id="new-timeslot-form" action="#">
        <div class="modal-body">
          <div class="alert alert-info alert-styled-left text-blue-800 content-group">
              <span class="text-semibold">Remember!</span> All sessions are 30 minutes.
              <button type="button" class="close" data-dismiss="alert">Ã—</button>
          </div>
          <h6 class="text-semibold">Select a Date</h6>
          <div class="input-group">
                <span class="input-group-addon"><i class="icon-calendar5"></i></span>
                <input type="text" placeholder="Select a Date" class="form-control datepicker">
          </div>
          <h6 class="text-semibold">Select a Time</h6>
          <div class="input-group">
                <span class="input-group-addon"><i class="icon-alarm"></i></span>
                <input type="text" placeholder="Select a Time" class="form-control timepicker">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
          <button id="create-timeslot" type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      <!-- /New Timeslot FORM -->
    </div>
  </div>
</div>
<!-- /create timeslot modal -->


